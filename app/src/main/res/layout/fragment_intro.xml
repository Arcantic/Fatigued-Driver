<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin_cards"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@color/colorPrimary"
    >

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:id="@+id/text_1"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorWhite"
            android:text="Driver Drowsiness and Fatigue Alert System"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_base"
            android:src="@drawable/widener_crest_white"
            android:layout_below="@+id/text_1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_2"
            style="@style/TextAppearance.AppCompat.Title.Inverse"
            android:text="Widener University Senior Project 2016-2017"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/image_base"
            android:gravity="center"
            />

        <Button
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:id="@+id/button_begin"
            android:text="Login"
            android:layout_below="@+id/text_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:textSize="18dp"
            style="@style/Widget.AppCompat.Button.Colored"
            />

    </RelativeLayout>

</RelativeLayout>