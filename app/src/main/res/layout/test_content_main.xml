<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fatigue.driver.app.Test_MainActivity"
    tools:showIn="@layout/test_app_bar_main">

    <TextView
        android:id="@+id/Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    
    <Button
        android:id="@+id/btn_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Hello"
        android:text="Launch modified BluetoothAdapterDemoActivity"
        android:textAlignment="viewStart"/>

    <Button
        android:id="@+id/btn_test1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:textStyle="bold"
        android:layout_below="@+id/btn_adapter"
        android:text="LAUNCH MAIN APP ACTIVITY"
        android:textAlignment="center"
        android:textSize="32dp"
        />

    <Button
        android:id="@+id/btn_test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_test1"
        android:text="Launch Test2 Activity - Media Playback"
        android:textAlignment="viewStart"/>


    <Button
        android:id="@+id/btn_test3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_test2"
        android:text="Launch Test3 Activity - MindWave initialization"
        android:textAlignment="viewStart"/>

    <Button
        android:id="@+id/btn_test4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_test3"
        android:text="Launch Test4 Activity"
        android:textAlignment="viewStart"/>

    <Button
        android:id="@+id/btn_test5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_test4"
        android:text="Launch SVM Test"
        android:textAlignment="viewStart"/>


</RelativeLayout>
